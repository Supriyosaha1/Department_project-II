# Parameters for CreateDomDump, and Serial 

!--------------------------------------------------------------------------------
[CreateDomDump]
# input outputs:
  DataDir    = data
  repository = /scratch/dansac/Grid_for_RT/
  snapnum    = 1
# computational domain : 
  pos        = 0.5, 0.5, 0.5
  rvir       = 0.4
  typechar   = sphere

# domain decomposition :
  decomp_dom_type = shell
  ndomain         = 2     
  rin             = 0.00, 0.15
  rout            = 0.2,  0.45 

# miscelaneous :
  verbose    = T
!--------------------------------------------------------------------------------



!--------------------------------------------------------------------------------
[serial]
  DataDir      = data/
  DomDumpFile  = MCLya_domain_params.dat
  PhotonICFile = ICs_photons_n5e6.dat
  outfile      = data/mes_photons.dat
  verbose = T
!--------------------------------------------------------------------------------


!--------------------------------------------------------------------------------
[MCLya]
  DataDir      = data/
  DomDumpFile  = MCLya_domain_params.dat
  PhotonICFile = ICs_photons_n5e6.dat
  outfile      = data/mes_photons.dat
  nbuffer      = 100
  verbose      = T
!--------------------------------------------------------------------------------


[worker]
  verbose = T

[master]
  verbose = T

!--------------------------------------------------------------------------------
[mesh]
  verbose = F
!--------------------------------------------------------------------------------


!--------------------------------------------------------------------------------
[gas_composition] 
# mixture parameters
  deut2H_nb_ratio     = 3.000E-05
  dust_to_metal_ratio = 3.000E-01
  mH_over_mdust       = 5.000E-08
# overwrite parameters
  gas_overwrite       = T
  fix_nhi             = 0.0
  fix_vth             = 1.0d5
  fix_ndust           = 0.000
  fix_vel             = 0.000
  fix_box_size_cm     = 1.000E+08
# miscelaneous parameters
  verbose             = T
!--------------------------------------------------------------------------------



!--------------------------------------------------------------------------------
[HI]
  recoil    = T
  isotropic = F
!--------------------------------------------------------------------------------



!--------------------------------------------------------------------------------
[Deuterium]
  recoil    = T
  isotropic = F
!--------------------------------------------------------------------------------



!--------------------------------------------------------------------------------
[dust]
  albedo       = 4.600E-01
  g_dust       = 7.300E-01
  grain_radius = 2.000E-06
!--------------------------------------------------------------------------------
